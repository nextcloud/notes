	"browserslist": [
		"last 2 versions",
		"ie >= 11"
	],
	"engines": {
		"node": ">=10.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/plugin-syntax-dynamic-import": "^7.2.0",
		"@babel/preset-env": "^7.2.3",
		"@vue/test-utils": "^1.0.0-beta.28",
